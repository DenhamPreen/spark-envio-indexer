{
  "compilerOptions": {
    "target": "es2020", //required for use with BigInt types
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "test"
  ]
}
